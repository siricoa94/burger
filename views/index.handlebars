<nav><h1 id="burgerTitle">Burgers!</h1></nav>

<div id="fatherDiv">
<h2>Burgers that are Fresh!</h2>


<ul>
       {{#each burger}}
       {{#unless devoured}}
       <p>{{id}}. {{burger_name}}
           <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
                   {{#if devoured}}devoured!{{else}}Devour me!{{/if}}
               </button></span>
       </p>
       {{/unless}}
       {{/each}}
   </ul>

<h2>Burgers that are Devoured!</h2>

<ul>
       {{#each burger}}
       {{#if devoured}}
       <p>{{id}}. {{burger_name}}
           <span><button class="change-devour" data-id="{{id}}" data-newdevour=false>
                   {{#if devoured}}devoured!{{else}}Devour me!{{/if}}
               </button></span>
       </p>
       {{/if}}
       {{/each}}
   </ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleep">Devoured?</label><br>
    <input type="radio" name="Devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="Devoured" value="0"> Fresh
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>