<nav><h1 id="burgerTitle">Burgers!</h1></nav>

<div id="fatherDiv">
<h2>Burgers that are Fresh!</h2>

<ul>
  {{#each Burgers}}
    {{#unless Devoured}}
      {{> Burgers/Burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are Devoured!</h2>

<ul>
  {{#each Burgers}}
    {{#if Devoured}}
      {{> Burgers/Burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleep">Devoured?</label><br>
    <input type="radio" name="Devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="Devoured" value="0"> Fresh
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>